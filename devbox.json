{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "gren@0.6.2",
    "nodejs@22",
    "just@latest",
    "entr@latest",
    "fd@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "cd tests && gren run Main"
      ],
      "watch": [
        "fd \".+\\.(gren|json)\" | entr -c devbox run test"
      ],
    }
  }
}
